{
  "aiAssistedDevelopmentRules": {
    "version": "1.0.0",
    "lastUpdated": "2024-01-15T00:00:00Z",
    "alwaysApply": true,
    "categories": {
      "contextWindowOptimization": {
        "enabled": true,
        "priority": 1,
        "rules": {
          "semanticDensityMaximization": {
            "id": "CDO-1.1",
            "enabled": true,
            "autoApply": true,
            "templates": {
              "highDensityComments": {
                "pattern": "// @{marker}: {description}\n// @dependencies: {deps}\n// @complexity: {complexity}\n// @side-effects: {effects}",
                "markers": ["purpose", "input", "output", "throws", "performance"],
                "required": ["purpose"]
              },
              "contextRichSignatures": {
                "enforceReadonly": true,
                "requireTypeConstraints": true,
                "forbidGenericTypes": ["any", "object", "unknown"]
              },
              "tokenEfficientDocs": {
                "maxLines": 5,
                "requiredFields": ["ai-context", "input", "output"],
                "format": "structured"
              }
            }
          },
          "redundancyElimination": {
            "id": "CDO-1.2",
            "enabled": true,
            "autoApply": true,
            "patterns": {
              "dryTemplates": {
                "detectRepetition": true,
                "suggestGenerics": true,
                "minSimilarity": 0.8
              },
              "contextInheritance": {
                "useInheritanceMarkers": true,
                "trackInheritedContext": true
              }
            }
          }
        }
      },
      "aiFriendlyArchitecture": {
        "enabled": true,
        "priority": 2,
        "rules": {
          "predictableNaming": {
            "id": "AFA-2.1",
            "enabled": true,
            "autoApply": true,
            "conventions": {
              "semanticHierarchy": {
                "pattern": "{Domain}{Action}{Entity}{Qualifier?}",
                "enforcePattern": true,
                "caseStyle": "PascalCase"
              },
              "recognizablePrefixes": {
                "interface": "I",
                "type": "T",
                "enum": "E",
                "constant": "C",
                "enforceConsistency": true
              },
              "functionPrefixes": {
                "dataRetrieval": ["fetch", "get", "load", "retrieve"],
                "dataCreation": ["create", "add", "insert", "generate"],
                "validation": ["validate", "verify", "check", "ensure"],
                "transformation": ["transform", "convert", "map", "format"]
              }
            }
          },
          "standardizedOrganization": {
            "id": "AFA-2.2",
            "enabled": true,
            "autoApply": true,
            "structure": {
              "hierarchicalFolders": {
                "domains": ["models", "services", "repositories", "controllers", "types"],
                "shared": ["infrastructure", "utils", "types"],
                "config": ["settings", "environment", "constants"]
              },
              "fileNaming": {
                "pattern": "{domain}.{layer}.{purpose}.{extension}",
                "enforcePattern": true,
                "layers": ["model", "service", "repository", "controller", "util", "type", "config"]
              }
            }
          },
          "selfDocumentingStructures": {
            "id": "AFA-2.3",
            "enabled": true,
            "autoApply": true,
            "patterns": {
              "explicitDataFlow": {
                "requireTypeFlow": true,
                "usePipelinePattern": true,
                "enforceImmutability": true
              },
              "dependencyInjection": {
                "makeExplicit": true,
                "useInjectDecorators": true,
                "requireInterfaces": true
              }
            }
          }
        }
      },
      "performanceOptimization": {
        "enabled": true,
        "priority": 3,
        "rules": {
          "runtimePerformance": {
            "id": "PO-3.1",
            "enabled": true,
            "autoApply": true,
            "standards": {
              "complexityAnnotations": {
                "required": true,
                "includeSpaceComplexity": true,
                "includeBenchmarks": true
              },
              "memoryManagement": {
                "preferGenerators": true,
                "useObjectPooling": true,
                "avoidMemoryLeaks": true
              },
              "cachingStrategies": {
                "useMemoization": true,
                "implementLazyLoading": true,
                "addRateLimiting": true
              }
            }
          },
          "aiProcessingPerformance": {
            "id": "PO-3.2",
            "enabled": true,
            "autoApply": true,
            "patterns": {
              "cognitiveLoadReduction": {
                "singleResponsibility": true,
                "clearBoundaries": true,
                "maxMethodComplexity": 10
              },
              "dependencyClarity": {
                "explicitDependencies": true,
                "traceableDependencies": true,
                "interfaceSegregation": true
              }
            }
          },
          "developmentWorkflow": {
            "id": "PO-3.3",
            "enabled": true,
            "autoApply": true,
            "templates": {
              "rapidPrototyping": {
                "useScaffolding": true,
                "generateCRUDTemplates": true,
                "autoImplementInterfaces": true
              },
              "automatedRefactoring": {
                "markRefactorOpportunities": true,
                "suggestExtractions": true,
                "optimizeImports": true
              }
            }
          }
        }
      },
      "humanAiCollaboration": {
        "enabled": true,
        "priority": 4,
        "rules": {
          "handoffProcedures": {
            "id": "HAC-4.1",
            "enabled": true,
            "autoApply": true,
            "markers": {
              "aiGeneration": {
                "markGenerated": true,
                "includeTimestamp": true,
                "includeConfidence": true,
                "requireReview": ["security", "performance", "business-logic"]
              },
              "reviewCheckpoints": {
                "defineExplicit": true,
                "assignReviewers": true,
                "setDeadlines": true,
                "trackCompletion": true
              }
            }
          },
          "communicationPatterns": {
            "id": "HAC-4.2",
            "enabled": true,
            "autoApply": true,
            "formats": {
              "structuredRequests": {
                "requireContext": true,
                "specifyConstraints": true,
                "provideExamples": true
              },
              "feedbackLoops": {
                "collectQualityMetrics": true,
                "trackAccuracy": true,
                "identifyImprovements": true
              }
            }
          },
          "integrationGuidelines": {
            "id": "HAC-4.3",
            "enabled": true,
            "autoApply": true,
            "workflows": {
              "versionControl": {
                "aiAwareCommits": true,
                "coAuthorCredits": true,
                "reviewRequirements": true
              },
              "cicdIntegration": {
                "aiCodeReview": true,
                "qualityChecks": true,
                "patternValidation": true
              }
            }
          }
        }
      },
      "continuousImprovement": {
        "enabled": true,
        "priority": 5,
        "rules": {
          "learningLoops": {
            "id": "CI-5.1",
            "enabled": true,
            "autoApply": true,
            "tracking": {
              "patternSuccess": {
                "trackMetrics": true,
                "measureEffectiveness": true,
                "identifyAntiPatterns": true
              },
              "usageAnalytics": {
                "frequency": true,
                "effectiveness": true,
                "userSatisfaction": true
              }
            }
          },
          "feedbackMechanisms": {
            "id": "CI-5.2",
            "enabled": true,
            "autoApply": true,
            "metrics": {
              "suggestionQuality": {
                "accuracy": true,
                "relevance": true,
                "completeness": true,
                "performance": true
              },
              "continuousLearning": {
                "patternRecording": true,
                "outcomeTracking": true,
                "modelImprovement": true
              }
            }
          },
          "knowledgeBaseMaintenance": {
            "id": "CI-5.3",
            "enabled": true,
            "autoApply": true,
            "documentation": {
              "patternExtraction": true,
              "automatedDocumentation": true,
              "successRateTracking": true
            }
          }
        }
      }
    },
    "prioritySystem": {
      "conflictResolution": {
        "securityFirst": true,
        "performanceSecond": true,
        "maintainabilityThird": true,
        "efficiencyFourth": true
      },
      "overrides": {
        "criticalPath": "performance",
        "securityContext": "security",
        "publicApi": "maintainability",
        "prototype": "efficiency"
      }
    },
    "validation": {
      "enabled": true,
      "autoFix": true,
      "severity": {
        "ruleViolation": "warning",
        "securityIssue": "error",
        "performanceIssue": "warning",
        "styleIssue": "info"
      }
    }
  }
}
