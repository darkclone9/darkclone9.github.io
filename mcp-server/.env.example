# Gary's Portfolio MCP Server Configuration

# Server Configuration
PORT=3001
NODE_ENV=development
HOST=localhost

# API Configuration
API_VERSION=v1
API_BASE_PATH=/api

# Security
JWT_SECRET=your-super-secret-jwt-key-here
CORS_ORIGIN=http://localhost:3000,https://gary-portfolio.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/portfolio-mcp.log

# Database (if using external database in future)
# DATABASE_URL=postgresql://user:password@localhost:5432/portfolio
# REDIS_URL=redis://localhost:6379

# External Services (for future integrations)
# GITHUB_TOKEN=your-github-token
# ANALYTICS_API_KEY=your-analytics-key

# Portfolio Configuration
PORTFOLIO_TITLE="Gary's Graphic Design Portfolio"
PORTFOLIO_DESCRIPTION="Creative professional combining artistic vision with technical expertise"
CONTACT_EMAIL=gary@example.com
PORTFOLIO_URL=https://gary-portfolio.com

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true
ENABLE_CORS=true

# Performance
CACHE_TTL=3600
MAX_PAYLOAD_SIZE=10mb
REQUEST_TIMEOUT=30000
